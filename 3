using System;
public class Device
{
    private string brand;
    public string Brand
    {
        get { return brand; }
        set { brand = value; }
    }
    public Device(string brand)
    {
        this.brand = brand;
    }

    public void PowerOn()
    {
        Console.WriteLine($"[{brand}] включён.");
    }
}
public class Laptop : Device
{
    private int ram;
    private int battery;

    public int Ram
    {
        get { return ram; }
        set
        {
            if (value >= 1 && value <= 64)
                ram = value;
            else
                Console.WriteLine("ОЗУ должно быть от 1 до 64!");
        }
    }
    public int Battery
    {
        get { return battery; }
        set
        {
            if (value >= 0 && value <= 100)
                battery = value;
            else
                Console.WriteLine("Заряд батареи должен быть от 0 до 100%!");
        }
    }
    public Laptop(string brand, int ram, int battery) : base(brand)
    {
        this.Ram = ram;
        this.Battery = battery;
    }
    public void Work()
    {
        Console.WriteLine($"Ноутбук {Brand}, ОЗУ: {Ram} ГБ, заряд: {Battery}%.");
    }
}
class Program
{
    static void Main(string[] args)
    {
        Laptop laptop = new Laptop("Dell", 16, 85);
        laptop.PowerOn();
        laptop.Work();
        Console.WriteLine();
        Laptop laptop2 = new Laptop("HP", 0, 50);
        laptop2.PowerOn();
        laptop2.Work();
    }
}
